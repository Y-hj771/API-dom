    <title>Document</title>
    <style>
        * {
            margin: 0;
            padding: 0;
        }
        div {
            position: absolute;
            left: 0;
            top: 0;
            width: 200px;
            height: 200px;
            background-color: gray;
        }
    </style>
</head>
<body>
    <div></div>
    <script>
        //函数的封装 
        function animate(obj,target){
            
        var timer = setInterval(function(){
            if(div.offsetLeft >= target){
                clearInterval(timer);
            }
            div.style.left = div.offsetLeft + 10 + 'px';
        },30)
        }
        var div = document.querySelector('div');
        //函数调用
        animate(div,900);
        
    </script>
