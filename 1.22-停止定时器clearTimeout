<body>
    <button>停止计时器</button>
    <script>
        var time1 = setTimeout(function(){
            console.log('我要爆炸了');
        },5000);
    var bnt = document.querySelector('button'); 
    bnt.addEventListener('click',function () {
        clearTimeout(time1);
    })
    </script>
</body>
