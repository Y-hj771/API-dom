    <script>
        setInterval(function() {
            alert('我每隔两秒出来一次');
        }, 2000);
    </script>
    <!-- setInterval是每隔一个延迟时间就调用这个函数 会重复很多次 -->
    <!-- setTimeout是延迟时间到了就执行一次 然后结束调用 不会重复 -->
</body>
